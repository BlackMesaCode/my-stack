@using BlackMesa.MyStack.Main.Resources
@model BlackMesa.MyStack.Main.ViewModels.Account.ManageUserViewModel

@using (Html.BeginForm("Manage", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <h3>@Strings.ChangePassword</h3>
    
    @Html.ValidationSummary()

    @Html.LabelFor(m => m.OldPassword)
    @Html.PasswordFor(m => m.OldPassword)

    @Html.LabelFor(m => m.NewPassword)
    @Html.PasswordFor(m => m.NewPassword)

    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.PasswordFor(m => m.ConfirmPassword)

    <input type="submit" value="@Strings.ChangePassword" />
}
